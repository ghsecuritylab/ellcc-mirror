# $E expands to the compiler's execution directory.
# $R expands to the compiler's resource directory.
compiler:
  options:
    - -target arm-ellcc-linux-eabi5
    - -march=armv7
    - -mfpu=vfp
    - -mfloat-abi=softfp
assembler:
  exe: $E/arm-elf-as
  options:
linker:
  exe: $E/ecc-ld
  options:
    - -m armelf_linux_eabi
    - --build-id
    - --hash-style=gnu
    - --eh-frame-hdr

  static_crt1: $R/lib/arm/linux/crt1.o
  dynamic_crt1: $R/lib/arm/linux/Scrt1.o
  crtbegin: $R/lib/arm/linux/crtbegin.o
  crtend: $R/lib/arm/linux/crtend.o
  library_path: $R/lib/arm/linux
