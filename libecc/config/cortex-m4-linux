# $E expands to the compiler's execution directory.
# $R expands to the compiler's resource directory.
based_on: arm-ellcc-linux
compiler:
  options:
    - -target arm-ellcc-linux
    - -mcpu=cortex-m4
linker:
  exe: $E/ecc-ld
  options:
    - -m armelf_linux_eabi
    - --build-id
    - --hash-style=gnu
    - --eh-frame-hdr

  static_crt1: $R/lib/cortex-m4/linux/crt1.o
  dynamic_crt1: $R/lib/cortex-m4/linux/Scrt1.o
  crtbegin: $R/lib/cortex-m4/linux/crtbegin.o
  crtend: $R/lib/cortex-m4/linux/crtend.o
  library_paths:
    - $R/lib/cortex-m4/linux
