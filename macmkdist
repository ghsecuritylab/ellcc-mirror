#! /bin/sh
if [ $# -ne 1 ] ; then
    echo "$0: <version>"
    exit 1
fi
OSX=Mac_OS_X_`sw_vers -productVersion`
name=ellcc-$OSX-$1.tgz

make -C baremetal clean
pwd=`pwd`
pwd=`basename $pwd`
files=`sed -e "s:\(.*\):$pwd/\1:" ellcc.files`
cd ..; tar --transform="s:$pwd/:ellcc/:" -cvfpz $pwd/$name $files ; cd -
echo created $name
