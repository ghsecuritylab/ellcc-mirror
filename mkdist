#! /bin/sh
if [ $# -ne 1 ] ; then
    echo "$0: <configuration-version>"
    exit 1
fi
name=ellcc-$1.tgz

if [ -e bin-$1 ] ; then
  # The non-native bin directory exists.
  mv bin bin.save
  ln -s bin-$1 bin
fi
pwd=`pwd`
make -C baremetal clean
cd ..; tar cvfpz $pwd/$name -T $pwd/ellcc.files ; cd -
if [ -e bin-$1 ] ; then
  rm bin
  mv bin.save bin
fi
echo created $name
