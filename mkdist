#! /bin/sh
if [ $# -ne 2 ] ; then
    echo "$0: <configuration> <version>"
    exit 1
fi
name=ellcc-$1-$2.tgz

if [ -e bin-$1 ] ; then
  # The non-native bin directory exists.
  mv bin bin.save
  ln -s bin-$1 bin
fi
pwd=`pwd`
pwd=`basename $pwd`
make -C examples distclean
files=`sed -e "s:\(.*\):$pwd/\1:" ellcc.files`
cd ..; tar --transform="s:$pwd/:ellcc/:" -cvpz -f $pwd/$name $files ; cd -
if [ -e bin-$1 ] ; then
  rm bin
  mv bin.save bin
fi
echo created $name
